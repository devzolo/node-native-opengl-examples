{
  "name": "@devzolo/node-native-opengl-examples",
  "version": "1.0.0",
  "main": "dist",
  "author": "Raphael-ZoLo <zolotorevsky@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com/devzolo/node-native-opengl-examples",
  "publishConfig": {
    "@devzolo:registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "dev": "tsnd -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify src/browser/index.ts",
    "dev1": "tsnd -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify src/spectrum/index.ts",
    "dev2": "tsnd -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify src/glsl/index.ts",
    "build": "tsc",
    "test": "jest --coverage",
    "build1": "(node -e \"if (! require('fs').existsSync('./bin/helpers')){process.exit(1)} \" || npm run setup-helpers) && npm run final-build-step",
    "build2": "node -e \"require('dotenv/config'); if (process.env.NODE_ENV === 'development'){process.exit(1)} \" || yarn build"
  },
  "dependencies": {
    "@devzolo/node-native-browser": "link:../node-native-browser",
    "@devzolo/node-native-gl": "link:../node-native-gl",
    "@devzolo/node-native-glu": "link:../node-native-glu",
    "@devzolo/node-native-glut": "link:../node-native-glut",
    "@devzolo/node-native-sound": "link:../node-native-sound",
    "bmp-js": "^0.1.0",
    "jpeg-js": "^0.4.3",
    "pngjs": "^6.0.0"
  },
  "devDependencies": {
    "@types/jest": "^25.1.2",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.0",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^3.7.5"
  }
}
